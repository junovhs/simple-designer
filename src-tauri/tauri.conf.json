{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "identifier": "com.simple-designer.app",
  "build": {
    "frontendDist": "../src"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../icons/32x32.png",
      "../icons/128x128.png",
      "../icons/128x128@2x.png",
      "../icons/icon.icns",
      "../icons/icon.ico"
    ]
  },
  "productName": "Simple Designer",
  "version": "0.1.0",
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Simple Designer",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}